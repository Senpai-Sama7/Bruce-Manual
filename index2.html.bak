            const isOpen = typeof forceState === 'boolean' ? forceState : !el.classList.contains('open');
            
            el.classList.toggle('open', isOpen);
            toggle?.setAttribute('aria-expanded', String(isOpen));
        },

        escapeHtml(str) {
            const div = document.createElement('div');
            div.textContent = str;
